

<%-include('./partials/header')%>
<%-include('./partials/navbar')%>
   
    <main>

      <%-include('./flash.ejs')%>

      <h1>Edit Product form</h1>

      <form
        class="needs-validation"
        action="/products/<%=foundProduct._id%>?_method=PATCH"
        method="POST"
        novalidate
      >
        <div>
          <label for="naam">Name: </label>
          <input
            type="text"
            name="name"
            id="naam"
            value="<%=foundProduct.name%>"
            required
          />
        </div>

        <div>
          <label for="img">img: </label>
          <input
            type="text"
            name="img"
            id="img"
            value="<%=foundProduct.img%>"
          />
        </div>

        <div>
          <label for="price">Price: </label>
          <input
            type="text"
            name="price"
            id="price"
            value="<%=foundProduct.price%>"
            required
          />
        </div>

        <div>
          <label for="desc">Description: </label>
          <textarea name="desc" id="desc" rows="3">
                <%=foundProduct.name%> </textarea
          >
        </div>

        <button type="submit">Edit Product</button>
      </form>
    </main>
  
      <!-- place footer here -->

      <%-include('./partials/footer.ejs')%>


